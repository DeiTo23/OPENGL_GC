#include <GL/glut.h>
#include <cstdlib>


float green[] = {0.258, 0.721, 0.18}; // Color verde
float orange[] = {0.925, 0.419, 0.192}; // Color naranja
float magenta[] = {0.901, 0.09, 0.301}; // Color fucsia
