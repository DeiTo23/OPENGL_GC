int main(int argc, char *argv[])
{
    glutInit(&argc, argv);
    glutInitWindowSize(482,495);
    glutInitWindowPosition(10, 10);
    glutInitDisplayMode(GLUT_RGB | GLUT_DOUBLE | GLUT_DEPTH);

    glutCreateWindow("TANGRAMA");

    escala();

    glutDisplayFunc(display);

    glutMainLoop();

    return EXIT_SUCCESS;
}
