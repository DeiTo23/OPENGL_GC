float cyan[] = {0.031, 0.69, 0.831}; // Color cyan
float purple[] = {0.549, 0.270, 0.568}; // Color morado
void escala()
{
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    gluOrtho2D(-6, 6, -6, 6);
    glMatrixMode(GL_MODELVIEW);
    glLoadIdentity();
}

