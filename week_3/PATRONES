void escala()
{
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    int a=6;
    gluOrtho2D(-a, a, -a, a);
    glMatrixMode(GL_MODELVIEW);
    glLoadIdentity();
}

void figura(GLubyte patron[], float color[],float x,float y,float lado)
{
    glEnable(GL_POLYGON_STIPPLE);
    glPolygonStipple(patron);
    glColor3f(color[0],color[1],color[2]);
    glBegin(GL_POLYGON);
    glVertex2f(x, y);
    glVertex2f(x+lado,y);
    glVertex2f(x+lado, y-lado);
    glVertex2f(x,y-lado );
    glEnd();
    glDisable(GL_POLYGON_STIPPLE);
}

static void display(void)
{
    glClearColor(1, 1, 1, 1);
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
    figura(D, green,-2,2,4);
    figura(patron1,purple,-5,5,2);
    figura(patron2, black,3,2,2);
    glutSwapBuffers();
}

int main(int argc, char *argv[])
{
    glutInit(&argc, argv);
    glutInitWindowSize(600, 600);
    glutInitWindowPosition(10, 10);
    glutInitDisplayMode(GLUT_RGB | GLUT_DOUBLE | GLUT_DEPTH);
    glutCreateWindow("PATRONES");
    escala();
    glutDisplayFunc(display);
    glutMainLoop();
    return EXIT_SUCCESS;
}
