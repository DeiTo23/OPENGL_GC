#include <windows.h>
#ifdef __APPLE__
#include <GLUT/glut.h>
#else
#include <GL/glut.h>
#endif
#include <iostream>
#include <stdlib.h>

float green[] = {0.258, 0.721, 0.18}, orange[] = {0.925, 0.419, 0.192}, magenta[] = {0.901, 0.09, 0.301};
float yellow[] = {0.976, 0.854, 0.011}, pink[] = {0.8, 0.36, 0.592}, cyan[] = {0.031, 0.69, 0.831};
float purple[] = {0.549, 0.270, 0.568}, black[] = {0, 0, 0};

GLubyte mosca[] = {
        0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00,
        0x03, 0x80, 0x01, 0xC0, 0x06, 0xC0, 0x03, 0x60,
        0x04, 0x60, 0x06, 0x20, 0x04, 0x30, 0x0C, 0x20,
        0x04, 0x18, 0x18, 0x20, 0x04, 0x0C, 0x30, 0x20,
        0x04, 0x06, 0x60, 0x20, 0x44, 0x03, 0xC0, 0x22,
        0x44, 0x01, 0x80, 0x22, 0x44, 0x01, 0x80, 0x22,
        0x44, 0x01, 0x80, 0x22, 0x44, 0x01, 0x80, 0x22,
        0x44, 0x01, 0x80, 0x22, 0x44, 0x01, 0x80, 0x22,
        0x66, 0x01, 0x80, 0x66, 0x33, 0x01, 0x80, 0xCC,
        0x19, 0x81, 0x81, 0x98, 0x0C, 0xC1, 0x83, 0x30,
        0x07, 0xe1, 0x87, 0xe0, 0x03, 0x3f, 0xfc, 0xc0,
        0x03, 0x31, 0x8c, 0xc0, 0x03, 0x33, 0xcc, 0xc0,
        0x06, 0x64, 0x26, 0x60, 0x0c, 0xcc, 0x33, 0x30,
        0x18, 0xcc, 0x33, 0x18, 0x10, 0xc4, 0x23, 0x08,
        0x10, 0x63, 0xC6, 0x08, 0x10, 0x30, 0x0c, 0x08,
        0x10, 0x18, 0x18, 0x08, 0x10, 0x00, 0x00, 0x08};
void escala()
{
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    int a=6;
    gluOrtho2D(-a, a, -a, a);
    glMatrixMode(GL_MODELVIEW);
    glLoadIdentity();
}

void figura(GLubyte patron[], float color[],float x,float y,float lado)
{
    glEnable(GL_POLYGON_STIPPLE);
    glPolygonStipple(patron);
    glColor3f(color[0],color[1],color[2]);
    glBegin(GL_POLYGON);
    glVertex2f(x, y);
    glVertex2f(x+lado,y);
    glVertex2f(x+lado, y-lado);
    glVertex2f(x,y-lado );
    glEnd();
    glDisable(GL_POLYGON_STIPPLE);
}

static void display(void)
{
    glClearColor(1, 1, 1, 1);
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
    figura(mosca,purple,-1,1,0.75);
    glutSwapBuffers();
}

int main(int argc, char *argv[])
{
    glutInit(&argc, argv);
    glutInitWindowSize(600, 600);
    glutInitWindowPosition(10, 10);
    glutInitDisplayMode(GLUT_RGB | GLUT_DOUBLE | GLUT_DEPTH);
    glutCreateWindow("PATRONES");
    escala();
    glutDisplayFunc(display);
    glutMainLoop();
    return EXIT_SUCCESS;
}
